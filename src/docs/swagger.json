  },
  "tags": [
    {
      "name": "Records",
      "description": "Fetch records from the database"
    }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/records": {
      "post": {
        "tags": ["Records"],
        "summary": "Fetch records from the database",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "fetch data",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Record"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful",
            "examples": {
              "code": 200,
              "msg": "Successfull"
            },
            "schema": {
              "$ref": "#/definitions/Successful"
            }
          },
          "400": {
            "description": "Bad Request",
            "examples": {
              "code": 400,
              "msg": "Bad Request"
            },
            "schema": {
              "$ref": "#/definitions/BadRequestError as minCount is larger then maxCount"
            }
          },
          "404": {
            "description": "Not Found",
            "examples": {
              "code": 404,
              "msg": "Not Found"
            }
          }
        }
      }
    }
  },


    "definitions": {
      "Successful": {
          "type": "object",
          "properties": {
                "msg": {
                  "type": "string",
                  "example":  "Success"
                  },
                  "code": {
                    "type": "integer",
                    "example": 0
                  },
                  "records": {
                    "type": "array",
                    "example":[
                          {
                              "key": "ibfRLaFT",
                              "value": "AlpgKxsdliUG",
                              "createdAt": "2016-12-25T16:43:27.909Z",
                              "totalCount": 2892
                          },
                          {
                              "key": "pxClAvll",
                              "value": "pxWfhQUtqkvS",
                              "createdAt": "2016-12-19T10:00:40.050Z",
                              "totalCount": 2772
                          }
                      ]
                  
                  }
          }
      },
    "BadRequestError as minCount is larger then maxCount": {
      "type": "object",
      "properties": {
        "error": {
          "type": "object",
          "properties": {
            "msg": {
              "type": "string",
              "example":  "endDate\" must be greater than \"ref:startDate"
              }
            }
          }
        }
      },
      "Record": {
        "type": "object",
        "properties": {
          "startDate": {
            "type": "string",
            "example": "2016-01-26"
          },
          "endDate": {
            "type": "string",
            "example": "2018-02-02"
          },
          "minCount": {
            "type": "integer",
            "example": 2700
          },
          "maxCount": {
            "type": "integer",
            "example": 3000
          }
        }
      }
    }
    
  }


